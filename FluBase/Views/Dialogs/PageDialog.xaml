    <!-- Template overrides -->
    <!-- Title -->
    <ContentDialog.TitleTemplate>
        <DataTemplate>
            <Grid Margin="0"
                  Padding="0" />
        </DataTemplate>
    </ContentDialog.TitleTemplate>



    <!-- Dialog itself -->
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>


        <!-- Title with back button -->
        <StackPanel Grid.Row="0"
                    Orientation="Horizontal"
                    Visibility="Visible"
                    Margin="{ThemeResource ContentDialogTitleMargin}"
                    Padding="0,0,0,8"
                    BorderBrush="{ThemeResource SystemControlBackgroundBaseLowBrush}"
                    BorderThickness="0,0,0,1">
            <Button Style="{ThemeResource NavigationBackButtonNormalStyle}"
                    Command="{x:Bind CloseDialogCommand}"/>
            <TextBlock Text="{x:Bind Title, Mode=OneWay}"
                       Margin="12,0"
                       VerticalAlignment="Center"/>
        </StackPanel>


        <!-- Content -->
        <ScrollViewer Grid.Row="1">
            <!--<ContentPresenter Content="{x:Bind Content}"
                              ContentTemplate="{x:Bind ContentTemplate}"
                              ContentTransitions="{x:Bind ContentTransitions}"
